<div>
    <h1>Products in Real Time</h1>
    <div id="AddProds">
		<h2>Add Products</h2>
        <form id="addForm" class="form">

            <label for="addTitle" class="formLabels">Name</label>
            <input type="text" id="addTitle" />

            <label for="addDescription" class="formLabels">Description</label>
            <input type="text" id="addDescription" />

            <label for="addCategory" class="formLabels">Category</label>
            <input type="text" id="addCategory" />

            <label for="addPrice" class="formLabels">Price</label>
            <input type="number" id="addPrice" />

            <label for="addCode" class="formLabels">Code</label>
            <input type="text" id="addCode" />

            <label for="addStock" class="formLabels">Stock</label>
            <input type="number" id="addStock" />

            <label for="addStatus" class="formLabels">Status</label>
            <select name="Status" id="addStatus">
                <option>True</option>
                <option>False</option>
            </select>

            <button type="submit" id="addButton">Add</button>
        </form>
    </div>

    <div id="DelProds">
        <h2>Delete Products</h2>

        <form class="form">
            <label for="title" class="formLabels">Product ID</label>
            <input type="number" id="delId" />

            <button type="submit" id="delButton">Delete</button>
        </form>
    </div>
<div id="table">
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
            {{#each totalProducts}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
            </tr>
            {{/each}}
        </thead>
    </table>
</div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/productsRealTime.js"></script>